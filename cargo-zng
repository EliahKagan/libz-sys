#!/bin/bash
set -eu
trap 'rm -rf "$tempdir"' 0 INT
tempdir="$(mktemp -d)"
cargo package -l --allow-dirty |
    tr '\\' '/' |
    grep -v '^Cargo\.toml\.orig$' |
    tar --files-from=- -cf - |
    tar -C "$tempdir" -xf -
cp Cargo-zng.toml "$tempdir/Cargo.toml"
cp -a systest "$tempdir/systest"
mv "$tempdir/systest/Cargo-zng.toml" "$tempdir/systest/Cargo.toml"
cd "$tempdir"
cargo "$@"
